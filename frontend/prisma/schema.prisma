generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  projects  Project[]

  @@map("users")
}

model Project {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String?
  content     String   @db.Text
  excerpt     String?
  featured    Boolean  @default(false)
  published   Boolean  @default(false)
  
  thumbnail   String?
  tags        String[]
  technologies String[]
  liveUrl     String?
  githubUrl   String?
  
  startDate   DateTime?
  endDate     DateTime?
  publishedAt DateTime?
  
  order       Int      @default(0)
  
  authorId    String
  author      User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("projects")
  @@index([slug])
  @@index([published])
  @@index([featured])
  @@index([authorId])
}